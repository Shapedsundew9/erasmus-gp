// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3.12 & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces",
    "customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"eamodio.gitlens",
				"ms-python.isort",
				"bierner.markdown-mermaid",
				"DavidAnson.vscode-markdownlint",
				"ms-python.pylint"
			],
			"settings": {
				"python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
				"python.terminal.activateEnvironment": true,
				"python.analysis.extraPaths": [
					"/usr/local/share/bitdict",
					"${containerWorkspaceFolder}/erasmus-gp/egpcommon",
					"${containerWorkspaceFolder}/erasmus-gp/egppkrapi",
					"${containerWorkspaceFolder}/erasmus-gp/egppy",
					"${containerWorkspaceFolder}/erasmus-gp/egpdb",
					"${containerWorkspaceFolder}/erasmus-gp/egpdbmgr",
					"${containerWorkspaceFolder}/erasmus-gp/egpseed"
				],
				"python.analysis.autoImportCompletions": true,
				"python.analysis.indexing": true,
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.organizeImports": "explicit"
					}
				},
				"isort.args": [
					"--profile",
					"black"
				]
			}
		}
	},
	"containerEnv": {
		// Environment variables to set in the container.
		"EGP_PROFILE": "DEV"
	},
  	"postCreateCommand": "bash .devcontainer/post-create.sh",
  	"forwardPorts": [8080, 5432],
  	"runServices": ["app", "postgres", "pgadmin"]
}
