// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3.12 & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	// The workspace folder is the monorepo root
	"workspaceFolder": "/workspaces/erasmus-gp",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"eamodio.gitlens",
				"ms-python.isort",
				"bierner.markdown-mermaid",
				"DavidAnson.vscode-markdownlint",
				"ms-python.pylint",
				"GitHub.vscode-pull-request-github"
			],
		    "settings": {
				// Put all your VS Code settings here.
				// You can move them from devcontainer.json
				"python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
				"python.terminal.activateEnvironment": true,
				"python.analysis.extraPaths": [
					"/usr/local/share/bitdict",
					"/workspaces/erasmus-gp/egpcommon",
					"/workspaces/erasmus-gp/egppkrapi",
					"/workspaces/erasmus-gp/egppy",
					"/workspaces/erasmus-gp/egpdb",
					"/workspaces/erasmus-gp/egpdbmgr",
					"/workspaces/erasmus-gp/egpseed"
				],
				"python.analysis.autoImportCompletions": true,
				"python.analysis.indexing": true,
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.organizeImports": "explicit"
					}
				},
				"[json]": {
					"editor.formatOnSave": true,
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"[jsonc]": {
					"editor.formatOnSave": true,
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"isort.args": [
					"--profile",
					"black"
				],
				"python.testing.unittestArgs": [
					"-v",
					"-s",
					"./tests",
					"-p",
					"test_*.py"
				],
				"python.testing.pytestEnabled": false,
				"python.testing.unittestEnabled": true
			}
		}
	},
	"containerEnv": {
		// Environment variables to set in the container.
		"EGP_PROFILE": "DEV"
	},
	"postCreateCommand": "bash .devcontainer/post-create.sh",
	"forwardPorts": [
		8080,
		5432
	],
	"runServices": [
		"app",
		"postgres",
		"pgadmin"
	]
}